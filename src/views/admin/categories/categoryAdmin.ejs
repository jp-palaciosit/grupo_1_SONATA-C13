<!DOCTYPE html>
<%-include("../partials/head")%>
<link rel="stylesheet" href="/css/admin/categoryAdmin.css">
<body>
    <%-include("../partials/header")%>

    <main>
      <div class="caja-categoria">
          <article >
              <button class="btn-crearCategory">
                  <a href="/admin/categories/addCategory">
                      Crear categoria
                  </a>
              </button>
          </article>
          <article >
              <form action="/admin/categories/searchCategory" method="get">
                  <input type="text" name="search" id="search" placeholder="  Buscar CategorÃ­a" class="search-inputCate">
                  <button type="submit">

                  </button>
              </form>
          </article>
      </div>
        <article class="container-fluid">
            <table class="table table-striped table-hover mt-4">
                <thead>
                  <tr class="text-center">
                    <th scope="col">id</th>
                    <th scope="col">Nombre</th>
                    <th scope="col">Editar</th>
                    <th scope="col">Eliminar</th>
                  </tr>
                </thead>
                <tbody>
                    <% categorias.forEach((categoria, i)=> { %>
                        <tr class="text-center">
                            <th scope="row"><%=i+1%></th>
                            <td><%=categoria.name%></td>
                            <td>
                                <a href="/admin/categories/editCategory/<%- categoria.id %>" class="btn" id="btn-admin-modificacion">
                                    <i class="fa-solid fa-pen-to-square"></i>
                                </a>
                            </td>
                            <td>
                                <form action="/admin/categories/delete/<%- categoria.id %>?_method=DELETE" method="POST">
                                    <button type="submit" class="btn" id="btn-admin-borrar">
                                          <i class="fa-solid fa-trash-can"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
              </table>
        </article>
        
    </main>

    <%-include("../partials/footer")%>
    <%-include("../partials/script")%>
</body>
</html>